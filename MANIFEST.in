# Include package metadata files
include README.md
include LICENSE
include pyproject.toml

# Include configuration and prompt templates
recursive-include src/websearch_ai/config *.yaml *.example.yaml
recursive-include src/websearch_ai/prompts *.yaml

# Include documentation
recursive-include src/websearch_ai/docs *.md

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

